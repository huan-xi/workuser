<view class='info'>
  <view class='type'>
    <view class='title'>请选择您的的工种</view>
    <view class="list" >
      <view  wx:for="{{types}}" wx:key="key"  bindtap='typeTap' data-id='{{types[index].typeId}}' class="{{types[index].state?'select':''}}">{{types[index].typeName}}</view>
    </view>
  </view>
  <view class='infoDtaile'>
  <form bindsubmit="formSubmit">
    <view class='title'>您的信息</view>
    <view class='group'>
      <text class='label'>手机号：</text>
      <input name='phone' value='{{user.phone}}' placeholder='请输入手机号'></input>
    </view>
     <view class='group'>
      <text class='label'>真实姓名：</text>
      <input name='name' value='{{user.phone}}' placeholder='请输入真实姓名'></input>
    </view>
    <view class='idCard'>
      <view>
      身份证信息
      <text>({{user.valid}})</text></view>
      <image bindtap='imageTap' src='{{imageSrc}}'></image>
     </view>
      <button formType="submit" class='btn'>保存信息</button>
      </form>
  </view>
  
</view>