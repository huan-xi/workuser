.swiper {
  height: 400rpx;
  width: 100%;
}
.carousel {
  margin: 5rpx;
  font-size: 14rpx;
  overflow: hidden;
  position: relative;
  background: #fff;
  border-radius: 10rpx;
}
.swiper-image {
  height: 100%;
  width: 100%;
  border-radius: 10rpx;
}
.slide-image {
  height: 100%;
  width: 95%;
  margin: 0 20rpx;
  border-radius: 10rpx;
}
.search-wrap {
  display: flex;
  align-items: center;
  width: 100%;
  height: 90rpx;
  color: #fff;
  background: #1296db;
  border-bottom: 1rpx solid #1296db;
}
.search-location {
  height: 90rpx;
  line-height: 90rpx;
  margin-left: 22rpx;
  font-size: 24rpx;
  overflow: hidden;
}
.search {
  flex-grow: 1;
  margin: 15rpx 24rpx;
}
.search-icon {
  width: 44rpx;
  height: 90rpx;
  line-height: 90rpx;
  margin-right: 22rpx;
}

.hidden {
  display: none;
}

.icon-search {
  position: absolute;
  left: 55rpx;
  top: 23%;
}

.index {
  min-height: 100%;
}

.jobList {
  padding-bottom: 40rpx;
}

.jobBox {
  margin-top: 20rpx;
  padding: 20rpx;
  background-color: white;
  border: 1rpx solid #dddee1;
  border-radius: 5px;
}
.images{
  margin-top: 20rpx;
}
.images image{
  width: 150rpx;
  height: 150rpx;
  margin-left: 10rpx;
  border-radius: 5px;
}
.header-name{
  padding-left: 18rpx;
}
.name{
    margin-bottom: 10rpx;
}
.desc {
  color: gray;
  display: inline-block;
  margin-right: 20rpx;
  font-size: 27rpx;
}

.footBox {
  border-top: solid 1rpx #1296db;
}
