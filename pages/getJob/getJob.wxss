/* miniprogram/pages/job/job.wxss */
.jobDetail{
background-color: white;
margin-top: 20rpx;
padding: 20rpx; 
}
.title view{
  display: inline-block;
  width: 70%;
}
.title{
  margin-top: 20rpx;
  border-left: solid 4rpx #1296db;
  padding-left: 30rpx;
}
.title text{
  width: 30%;
  float: right;
  color: rgb(224, 135, 108);
}
.otherInfo text, .otherInfo view {
  margin-top: 20rpx;
  font-size: 30rpx;
  color: gray;
  padding-right: 20rpx;
}
.descTitle{
  margin-top: 20rpx;
  border-left: solid 4rpx #1296db;
  padding-left: 30rpx;
}
.descContex{
  margin-top: 30rpx;
  color: gray;
  font-size:30rpx; 
}
.foot{
  position: fixed;
  bottom: 5rpx;
  left: 0;
  width: 100%;
  background-color: white;
}
.foot button{
    float: left;
    width: 45%;
    margin-left: 20rpx;
    color: white;
    background: #1296db;
    border-radius: 3px;
    font-size: 30rpx;
}

.video{
  width: 100%;
  height: 250rpx;
  margin:25rpx 0; 
}
.other{
  min-height: 100rpx;
}
.commonItem{
  margin-top: 30rpx;
  font-size: 30rpx;
  margin-left: 30rpx;
  padding: 10rpx 0 10rpx 40rpx;
  color: gray;
   display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.bad{
  border-left: solid 4rpx red !important;
}
.commonHeader{
  width: 220rpx;
  height: 80rpx;
  display: -webkit-box;
  display: -webkit-flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
}
.commonHeader image{
  width: 50rpx;
  height: 50rpx;
}
.commonItem text{
  line-height: 10rpx;
  margin-left: 10rpx;
}
.commonItem{
  position: relative;
  margin-top: 20rpx;
}

.commonHeader:after{
  content: ".";
  display: block;
  height: 0;
  clear: both;
  visibility: hidden;
}
.btn-full{
  width: 95% !important;
}